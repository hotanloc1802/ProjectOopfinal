<UserControl x:Class="ClassroomManagementApp1.Component.MainWindowBoxAssignments1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassroomManagementApp1.Component"
        mc:Ignorable="d"
         d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="white" CornerRadius="10" Margin="0,10,0,0" Height="60">
        <StackPanel VerticalAlignment="Top">
            <TextBlock FontFamily="Montserrat Bold" FontSize="17" Text="{Binding Item2._description}" HorizontalAlignment="Left" Margin="20,6,3,0" Foreground="GRAY"/>
            <TextBlock FontFamily="Montserrat" FontSize="12"  Text="{Binding Item2._duedate}" Margin="4,8,3,0" Foreground="Gray" HorizontalAlignment="Center" />
        </StackPanel>
    </Border>
</UserControl>
