<UserControl x:Class="ClassroomManagementApp1.Component.MainWindowBoxAssignments2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassroomManagementApp1.Component"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="boEx3" Margin="220,20,0,0" Width="110" Height="38" Grid.Row="0" Grid.Column="0" Background="Transparent" BorderBrush="Transparent">
        <Border Width="105" Height="33" Background="white" CornerRadius="10">
            <StackPanel VerticalAlignment="Top">
                <TextBlock FontFamily="Montserrat Bold" FontSize="10" Text="{Binding Item._subjectname}" HorizontalAlignment="Left" Margin="4,6,3,0" Foreground="GRAY"/>
                <TextBlock FontFamily="Montserrat" FontSize="8.5" Text="{Binding Item._duedate}" Margin="4,0,3,0" Foreground="Gray" />
            </StackPanel>
        </Border>
    </Border>
</UserControl>
