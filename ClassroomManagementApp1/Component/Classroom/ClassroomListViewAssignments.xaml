<UserControl x:Class="ClassroomManagementApp1.Component.ClassroomListViewAssignments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassroomManagementApp1.Component"
        mc:Ignorable="d"
          d:DesignHeight="450" d:DesignWidth="800">
    <ListView ItemsSource="{Binding AssignmentsFormattedList}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <StackPanel Margin="0,0,0,0">
                        <TextBlock Text="{Binding description}" FontSize="15" FontFamily="Montserrat" Foreground="#b897c6" Margin="5,0,0,0"/>
                        <TextBlock Text="{Binding Date}" FontSize="15" FontFamily="Montserrat" Foreground="#b897c6" Margin="5,10,0,0"/>
                    </StackPanel>
                </Grid>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
