                                            <TextBlock Text="ENGLISH" FontSize="12" FontFamily="Montserrat Bold" Foreground="White" />
                                            <TextBlock Text="12th September, 2024 - 21st November, 2024" FontSize="8" FontFamily="Montserrat" Foreground="White" Margin="0,2,0,0"/>
                                            <TextBlock Text="+4 files uploaded" FontSize="8" FontFamily="Montserrat" Foreground="White" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Button>

                        <Button x:Name="BtnClassroom3" Background="Transparent" Margin="0,-5,0,10" BorderBrush="Transparent" Click="BtnClassroom1_Click">
                            <Border Height="70" Width="278" CornerRadius="10" Background="#b897c6">
                                <Grid Grid.Column="1" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Ellipse Width="48" Height="48" Fill="#f6eefb" Stroke="Transparent" Margin="0,-10,0,0"/>
                                        <Image Source="D:\final_lab\AppOop-20241025T081959Z-001\AppOop\AppOop\images\profile.png" Width="48" Height="48" Stretch="UniformToFill" Margin="0,-10,0,0">
                                            <Image.Clip>
                                                <EllipseGeometry Center="24,24" RadiusX="24" RadiusY="24"/>
                                            </Image.Clip>
                                        </Image>
                                        <TextBlock Text="Lect. Ross Geller" FontSize="8" Foreground="White" Margin="0,51,0,0"/>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0">
                                            <TextBlock Text="ENGLISH" FontSize="12" FontFamily="Montserrat Bold" Foreground="White" />
                                            <TextBlock Text="12th September, 2024 - 21st November, 2024" FontSize="8" FontFamily="Montserrat" Foreground="White" Margin="0,2,0,0"/>
                                            <TextBlock Text="+4 files uploaded" FontSize="8" FontFamily="Montserrat" Foreground="White" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Button>

                        <Button x:Name="BtnClassroom4" Background="Transparent" Margin="0,-5,0,10" BorderBrush="Transparent" Click="BtnClassroom1_Click">
                            <Border Height="70" Width="278" CornerRadius="10" Background="#b897c6">
                                <Grid Grid.Column="1" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Ellipse Width="48" Height="48" Fill="#f6eefb" Stroke="Transparent" Margin="0,-10,0,0"/>
                                        <Image Source="D:\final_lab\AppOop-20241025T081959Z-001\AppOop\AppOop\images\profile.png" Width="48" Height="48" Stretch="UniformToFill" Margin="0,-10,0,0">
                                            <Image.Clip>
                                                <EllipseGeometry Center="24,24" RadiusX="24" RadiusY="24"/>
                                            </Image.Clip>
                                        </Image>
                                        <TextBlock Text="Lect. Ross Geller" FontSize="8" Foreground="White" Margin="0,51,0,0"/>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0">
                                            <TextBlock Text="ENGLISH" FontSize="12" FontFamily="Montserrat Bold" Foreground="White" />
                                            <TextBlock Text="12th September, 2024 - 21st November, 2024" FontSize="8" FontFamily="Montserrat" Foreground="White" Margin="0,2,0,0"/>
                                            <TextBlock Text="+4 files uploaded" FontSize="8" FontFamily="Montserrat" Foreground="White" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>

            <!--Deadlines-->
            <StackPanel Margin="310,65,20,0">
                <TextBlock Text="Deadlines:" Foreground="Gray" FontFamily="Montserrat" FontSize="12"/>
                <Border x:Name="boDeadlines" Height="240" Width="106" Background="White" CornerRadius="10" Margin="0,8,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <StackPanel Margin="5">
                            <Border x:Name="boDeadline1" HorizontalAlignment="Left" Background="Transparent" BorderBrush="Transparent" Margin="3,5,3,5">
                                <StackPanel>
                                    <TextBlock Text="English" FontSize="13" FontFamily="Montserrat Bold" Foreground="#b897c6" />
                                    <TextBlock Text="EX1: Travelling" FontSize="8" FontFamily="Montserrat" Foreground="#b897c6" Margin="0,2,0,0"/>
                                    <TextBlock Text="Thursday, October 3rd" FontSize="8" FontFamily="Montserrat" Foreground="#b897c6" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border x:Name="boDeadline2" HorizontalAlignment="Left" Background="Transparent" BorderBrush="Transparent" Margin="3,5,3,5">
                                <StackPanel>
                                    <TextBlock Text="English" FontSize="13" FontFamily="Montserrat Bold" Foreground="#b897c6" />
                                    <TextBlock Text="EX1: Travelling" FontSize="8" FontFamily="Montserrat" Foreground="#b897c6" Margin="0,2,0,0"/>
                                    <TextBlock Text="Thursday, October 3rd" FontSize="8" FontFamily="Montserrat" Foreground="#b897c6" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border x:Name="boDeadline3" HorizontalAlignment="Left" Background="Transparent" BorderBrush="Transparent" Margin="3,5,3,5">
                                <StackPanel>
                                    <TextBlock Text="English" FontSize="13" FontFamily="Montserrat Bold" Foreground="#b897c6" />
                                    <TextBlock Text="EX1: Travelling" FontSize="8" FontFamily="Montserrat" Foreground="#b897c6" Margin="0,2,0,0"/>
                                    <TextBlock Text="Thursday, October 3rd" FontSize="8" FontFamily="Montserrat" Foreground="#b897c6" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border x:Name="boDeadline4" HorizontalAlignment="Left" Background="Transparent" BorderBrush="Transparent" Margin="3,5,3,5" >
                                <StackPanel>
                                    <TextBlock Text="English" FontSize="12" FontFamily="Montserrat Bold" Foreground="#b897c6" />
                                    <TextBlock Text="EX1: Travelling" FontSize="8" FontFamily="Montserrat" Foreground="#b897c6" Margin="0,2,0,0"/>
                                    <TextBlock Text="Thursday, October 3rd" FontSize="8" FontFamily="Montserrat" Foreground="#b897c6" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border x:Name="boDeadline5" HorizontalAlignment="Left" Background="Transparent" BorderBrush="Transparent" Margin="3,5,3,5" >
                                <StackPanel>
                                    <TextBlock Text="English" FontSize="12" FontFamily="Montserrat Bold" Foreground="#b897c6" />
                                    <TextBlock Text="EX1: Travelling" FontSize="8" FontFamily="Montserrat" Foreground="#b897c6" Margin="0,2,0,0"/>
                                    <TextBlock Text="Thursday, October 3rd" FontSize="8" FontFamily="Montserrat" Foreground="#b897c6" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </StackPanel>

        </Grid>
    </Grid>

</Window>
